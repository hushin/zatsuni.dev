---
import TagIcon from "./icons/TagIcon.astro";

export interface Props {
  tag: string;
  href?: string;
  size?: "sm" | "md" | "lg";
  className?: string;
}

const { tag, href, size = "md", className = "" } = Astro.props;

// サイズに応じたクラス
const sizeClasses = {
  sm: "text-xs",
  md: "text-sm",
  lg: "text-base",
};

const baseClasses =
  "inline-flex items-center gap-1 text-base-content/70 no-underline transition-colors duration-200";
const hoverClasses = "hover:text-primary";
const tagClasses = `${baseClasses} ${sizeClasses[size]} ${className}`;
---

{
  href ? (
    <a
      href={href}
      class={`${tagClasses} ${hoverClasses}`}
      title={`${tag}タグの記事一覧`}
    >
      <TagIcon />
      {tag}
    </a>
  ) : (
    <span class={tagClasses}>
      <TagIcon />
      {tag}
    </span>
  )
}
