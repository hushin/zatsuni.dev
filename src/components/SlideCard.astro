---
import Datetime from "./Datetime.astro";

export interface Props {
  href: string;
  title: string;
  pubDatetime: string;
  description?: string;
}

const { href, title, pubDatetime, description } = Astro.props;
---

<li>
  <article
    class="border-base-300 bg-base-100 hover:border-l-primary border-l-4 transition-all duration-200"
  >
    <a
      href={href}
      class="block text-inherit no-underline"
      target="_blank"
      rel="noopener noreferrer"
    >
      <div class="px-4 py-2">
        <h3 class="text-lg font-semibold">
          {title}
          <svg
            class="ml-1 inline h-4 w-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </h3>

        <div class="mt-1">
          <Datetime pubDatetime={pubDatetime} />
        </div>

        <div class="text-base-content/80 mt-1">
          <slot />
        </div>

        {
          description && (
            <p class="text-base-content/80 mt-1 line-clamp-2 text-sm">
              {description}
            </p>
          )
        }
      </div>
    </a>
  </article>
</li>
