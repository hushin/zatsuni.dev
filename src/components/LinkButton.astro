---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  showInNewTab?: boolean;
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
  showInNewTab = false,
} = Astro.props;
---

{
  disabled ? (
    <span
      class:list={["group inline-block", className]}
      title={title}
      aria-disabled={disabled}
    >
      <slot />
    </span>
  ) : (
    <a
      {href}
      class:list={["group inline-block hover:text-skin-accent", className]}
      aria-label={ariaLabel}
      title={title}
      {...(showInNewTab ? { rel: "noopener noreferrer" } : {})}
      target={showInNewTab ? "_blank" : "_self"}
    >
      <slot />
    </a>
  )
}
