---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  showInNewTab?: boolean;
  variant?: "primary" | "secondary" | "accent" | "ghost" | "link" | "outline";
  size?: "xs" | "sm" | "md" | "lg" | "xl";
}

const {
  href,
  className = "",
  ariaLabel,
  title,
  disabled = false,
  showInNewTab = false,
  variant = "link",
  size = "md",
} = Astro.props;

const buttonClasses = [
  "btn",
  variant === "primary" && "btn-primary",
  variant === "secondary" && "btn-secondary",
  variant === "accent" && "btn-accent",
  variant === "ghost" && "btn-ghost",
  variant === "link" && "btn-link",
  variant === "outline" && "btn-outline",
  size !== "md" && `btn-${size}`,
  disabled && "btn-disabled",
  className,
]
  .filter(Boolean)
  .join(" ");
---

{
  disabled ? (
    <span class={buttonClasses} title={title} aria-disabled={disabled}>
      <slot />
    </span>
  ) : (
    <a
      {href}
      class={buttonClasses}
      aria-label={ariaLabel}
      title={title}
      {...(showInNewTab ? { rel: "noopener noreferrer" } : {})}
      target={showInNewTab ? "_blank" : "_self"}
    >
      <slot />
    </a>
  )
}
