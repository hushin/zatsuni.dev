---
import { SITE } from "@config";
import Socials from "./Socials.astro";

const currentYear = new Date().getFullYear();

export interface Props {
  noMarginTop?: boolean;
}

const { noMarginTop = false } = Astro.props;
---

<footer
  class={`footer footer-center bg-base-200 text-base-content p-10 ${noMarginTop ? "" : "mt-auto"}`}
>
  <div class="divider"></div>

  <nav class="grid grid-flow-col gap-4">
    <a
      href="/rss.xml"
      target="_blank"
      class="btn btn-ghost group transition-transform hover:scale-110"
      aria-label="RSS Feed"
      title="RSS Feed"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 scale-125 opacity-90"
        fill="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          d="M19 20.001C19 11.729 12.271 5 4 5v2c7.168 0 13 5.832 13 13.001h2z"
        ></path>
        <path
          d="M12 20.001h2C14 14.486 9.514 10 4 10v2c4.411 0 8 3.589 8 8.001z"
        ></path>
        <circle cx="6" cy="18" r="2"></circle>
      </svg>
      <span>RSS</span>
    </a>
    <Socials />
  </nav>

  <aside class="text-sm">
    <p class="flex flex-col items-center gap-1 sm:flex-row sm:gap-2">
      <span>Copyright © {currentYear} {SITE.author}</span>
      <span class="hidden sm:inline">•</span>
      <span>All rights reserved.</span>
    </p>
  </aside>
</footer>
