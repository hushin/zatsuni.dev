---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { slugifyStr } from "../../utils/slugify";
import { SITE } from "../../config";

// 記事を取得（下書きとスケジュール投稿は除外）
const allPosts = await getCollection("blog", ({ data }) => {
  return !data.draft && data.pubDatetime <= new Date();
});

// タグ毎の記事数を集計
const tagCounts = allPosts.reduce(
  (acc, post) => {
    post.data.tags?.forEach(tag => {
      if (acc[tag]) {
        acc[tag]++;
      } else {
        acc[tag] = 1;
      }
    });
    return acc;
  },
  {} as Record<string, number>
);

// タグを記事数順にソート
const sortedTags = Object.entries(tagCounts).sort(
  ([, countA], [, countB]) => countB - countA
);

// ページタイトルとメタ情報
const totalTags = sortedTags.length;
const pageTitle = "タグ一覧";
---

<BaseLayout title={pageTitle}>
  <div class="container mx-auto max-w-4xl px-4 py-8">
    <h1 class="text-base-content mb-2 pb-4 text-3xl font-bold">タグ一覧</h1>

    {
      sortedTags.length > 0 ? (
        <div class="space-y-6">
          <div class="flex flex-wrap gap-3">
            {sortedTags.map(([tag, count]) => (
              <a
                href={`/tags/${slugifyStr(tag)}/`}
                class="group bg-base-200 text-base-content hover:bg-primary hover:text-primary-content inline-flex items-center gap-2 rounded-full px-4 py-2 text-sm font-medium no-underline transition-all duration-200 hover:shadow-md"
              >
                <span class="flex items-center gap-1">
                  <svg
                    class="h-4 w-4 opacity-70"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.99 1.99 0 013 12V7a4 4 0 014-4z"
                    />
                  </svg>
                  {tag}
                </span>
                <div class="badge badge-sm bg-base-300 text-base-content group-hover:bg-primary-content group-hover:text-primary">
                  {count}
                </div>
              </a>
            ))}
          </div>
        </div>
      ) : (
        <div class="py-12 text-center">
          <p class="text-base-content/70">まだタグが登録されていません。</p>
        </div>
      )
    }
  </div>
</BaseLayout>
