---
import BaseLayout from "../layouts/BaseLayout.astro";
import BaseHead from "../components/BaseHead.astro";
---

<BaseLayout>
  <BaseHead slot="head" title="404 - ページが見つかりません" />
  <div class="container mx-auto max-w-4xl px-4 py-16 text-center">
    <h1 class="text-base-content mb-4 text-6xl font-bold">404</h1>
    <p class="text-base-content/80 mb-8 text-xl">ページが見つかりません</p>
    <a href="/" class="btn">トップページへ戻る</a>
  </div>
</BaseLayout>
